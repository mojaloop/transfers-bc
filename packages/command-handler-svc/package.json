{
    "name": "@mojaloop/transfers-bc-command-handler-svc",
    "version": "0.5.1",
    "description": "Mojaloop vNext Transfers BC - Command Handler Service",
    "license": "Apache-2.0",
    "homepage": "https://github.com/mojaloop/transfers-bc/command-handler-svc",
    "private": true,
    "mojaloop": {
        "publish_to_dockerhub": true
    },
    "bugs": {
        "url": "https://github.com/mojaloop/transfers-bc/issues#readme"
    },
    "contributors": [
        "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "start": "npm run service",
        "start:dev": "npm run build && AUDIT_KEY_FILE_PATH=./dist/tmp_audit_key_file npm run service",
        "service": "node dist/index.js",
        "build": "tsc",
        "watch": "tsc -w",
        "clean": "npm run clean:npm; npm run clean:dist",
        "clean:dist": "rm -rf dist",
        "clean:npm": "rm -rf node_modules",
        "pretest": "npm run build",
        "standard": "npm run lint",
        "lint": "npm run build && npx eslint ./src",
        "lint:fix": "npm run build && npx eslint ./src --fix",
        "test:unit": "jest --passWithNoTests --testMatch **/test/unit/**/*.test.ts",
        "dep:check": "ncu -e 2",
        "dep:update": "ncu -u"
    },
    "dependencies": {
        "@mojaloop/transfers-bc-domain-lib": "*",
        "@mojaloop/transfers-bc-implementations-lib": "*",
        "@mojaloop/transfers-bc-config-lib": "*",
        "@mojaloop/auditing-bc-client-lib": "~0.5.1",
        "@mojaloop/logging-bc-client-lib": "~0.5.2",
        "@mojaloop/logging-bc-public-types-lib": "~0.5.2",
        "@mojaloop/platform-configuration-bc-client-lib": "~0.5.2",
        "@mojaloop/platform-configuration-bc-public-types-lib": "~0.5.2",
        "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.5.5",
        "@mojaloop/platform-shared-lib-observability-client-lib": "~0.5.1",
        "@mojaloop/platform-shared-lib-observability-types-lib": "~0.5.2",
        "@mojaloop/platform-shared-lib-public-messages-lib": "~0.5.8",
        "@mojaloop/security-bc-client-lib": "~0.5.7",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@mojaloop/transfers-bc-shared-mocks-lib": "*",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.3.3",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.43.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "npm-check-updates": "^16.10.19",
        "ts-jest": "^29.1.2",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=20.10.0"
    }
}

{
    "name": "@mojaloop/transfers-bc-domain-lib",
    "version": "0.5.0",
    "description": "Mojaloop vNext Transfers BC - Domain lib",
    "license": "Apache-2.0",
    "homepage": "https://github.com/mojaloop/transfers-bc/domain-lib",
    "private": true,
    "bugs": {
        "url": "https://github.com/mojaloop/transfers-bc/issues#readme"
    },
    "contributors": [
        "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "clean": "(npm run clean:npm || true) && npm run clean:dist",
        "clean:dist": "rm -rf dist",
        "clean:npm": "rm -rf node_modules",
        "pretest": "npm run build",
        "standard": "npm run lint",
        "lint": "npm run build && npx eslint ./src",
        "lint:fix": "npm run build && npx eslint ./src --fix",
        "test:unit": "jest --passWithNoTests",
        "dep:check": "ncu -e 2",
        "dep:update": "ncu -u"
    },
    "dependencies": {
        "@mojaloop/transfers-bc-config-lib": "*",
        "@mojaloop/accounts-and-balances-bc-public-types-lib": "~0.5.1",
        "@mojaloop/auditing-bc-public-types-lib": "~0.5.1",
        "@mojaloop/logging-bc-public-types-lib": "~0.5.2",
        "@mojaloop/participant-bc-public-types-lib": "~0.5.4",
        "@mojaloop/platform-shared-lib-messaging-types-lib": "~0.5.4",
        "@mojaloop/platform-shared-lib-observability-types-lib": "~0.5.2",
        "@mojaloop/platform-shared-lib-public-messages-lib": "~0.5.8",
        "@mojaloop/security-bc-public-types-lib": "~0.5.5",
        "@mojaloop/scheduling-bc-public-types-lib": "~0.0.10"
    },
    "devDependencies": {
        "@types/node": "^20.3.3",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.43.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "npm-check-updates": "^16.10.19",
        "ts-jest": "^29.1.2",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=20.10.0"
    }
}

{
  "name": "@mojaloop/transfers-bc-domain-lib",
  "version": "0.1.2",
  "description": "Mojaloop vNext Transfers BC - Domain lib",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/transfers-bc/domain-lib",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/transfers-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "(npm run clean:npm || true) && npm run clean:dist",
    "clean:dist": "rm -rf dist",
    "clean:npm": "rm -rf node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest --passWithNoTests",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "@mojaloop/accounts-and-balances-bc-public-types-lib": "~0.1.4",
    "@mojaloop/auditing-bc-public-types-lib": "~0.0.15",
    "@mojaloop/logging-bc-public-types-lib": "~0.1.19",
    "@mojaloop/platform-shared-lib-public-messages-lib": "~0.1.119",
    "@mojaloop/security-bc-public-types-lib": "~0.1.19",
    "@mojaloop/participant-bc-public-types-lib": "~0.0.11",
    "@mojaloop/settlements-bc-public-types-lib": "~0.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "npm-check-updates": "^16.10.9",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
